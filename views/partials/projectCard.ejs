<div class="md:grid grid-cols-8 gap-4 my-4">
  <p class=" col-span-1 text-gray-500 underline underline-offset-4 md:underline-offset-8 justify-self-end mb-2"><%= project.date%></p>
  <div class=" col-span-7 flex flex-col p-6 bg-gray-100 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 border border-gray-200">
    <h3 class="text-xl font-bold text-primary mb-3"><%= project.title %></h3>

    <p class="text-gray-600 mb-4 flex-grow"><%= project.description %></p>

    <div class="flex flex-wrap gap-2 mb-4">
      <% project.technologies.forEach(tech=> { %>
      <span class="px-3 py-1 bg-secondary text-white rounded-full text-sm">
        <%= tech %>
      </span>
      <% }); %>
    </div>

    <% if (project.link === "dev") { %>
    <button disabled class="inline-flex items-center justify-center px-4 py-2 bg-gray-400 text-white rounded-lg cursor-not-allowed opacity-75">
      Coming soon...
    </button>
    <% } else if (project.link === "private") { %>
    <button disabled class="inline-flex items-center justify-center px-4 py-2 bg-gray-400 text-white rounded-lg cursor-not-allowed opacity-75">
      Private Repository
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-lock ml-2">
        <rect width="18" height="11" x="3" y="11" rx="2" ry="2" />
        <path d="M7 11V7a5 5 0 0 1 10 0v4" />
      </svg>
    </button>
    <% } else { %>
    <a href="<%= project.link === "#" ? "/" : project.link %>" target="_blank" class="inline-flex items-center justify-center px-4 py-2 bg-primary text-white rounded-lg transition-colors duration-300 hover:bg-primary-dark">
      View Project
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-move-up-right ml-2">
        <path d="M13 5H19V11" />
        <path d="M19 5L5 19" />
      </svg>
    </a>
    <% } %>
  </div>
</div>